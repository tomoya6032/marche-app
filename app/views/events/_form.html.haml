= form_with model: @event, local: true do |f|
  %div
    = f.label :start_time, "開始日時"
    = f.datetime_local_field :start_time

  %div
    = f.label :end_time, "終了日時"
    = f.datetime_local_field :end_time

  %div
    = f.label :title, "タイトル"
    = f.text_field :title

  %div
    = f.label :description, "説明"
    = f.text_area :description

  %div
    = f.submit "保存"
