= render 'header/header' # ヘッダーのパーシャルを呼び出す

- content_for :head do
  = stylesheet_link_tag 'hosts/show', media: 'all', 'data-turbo-track': 'reload'
  = javascript_include_tag 'hosts_event_slider', defer: true, 'data-turbo-track': 'reload'
  
  -# OGP設定
  %meta{property: "og:title", content: @host.name.presence || '名称未設定'}
  %meta{property: "og:description", content: "#{@host.name}のホストページです。出店イベント情報や商品紹介をご覧いただけます。"}
  %meta{property: "og:type", content: "website"}
  %meta{property: "og:url", content: request.original_url}
  - if @host&.top_image&.attached?
    %meta{property: "og:image", content: url_for(@host.top_image)}
  - else
    %meta{property: "og:image", content: asset_url('no_image_square.jpg')}
  %meta{property: "og:site_name", content: "Marche"}
  
  -# Twitter Card設定
  %meta{name: "twitter:card", content: "summary_large_image"}
  %meta{name: "twitter:title", content: @host.name.presence || '名称未設定'}
  %meta{name: "twitter:description", content: "#{@host.name}のホストページです。出店イベント情報や商品紹介をご覧いただけます。"}
  - if @host&.top_image&.attached?
    %meta{name: "twitter:image", content: url_for(@host.top_image)}
  - else
    %meta{name: "twitter:image", content: asset_url('no_image_square.jpg')}

.host-lp-page 
  .host-details
    .host-header
      -# ★★★ ホスト本人用の情報とボタン ★★★
      - if host_signed_in? && @host == current_host
        .host-management-section
          %h2 ホストマイページ：プロフィール情報確認

          -# スラッグの確認
          %p.host-slug
            %strong プロフィールURLスラッグ:
            = @current_slug_for_display # コントローラで設定した変数

          .host-actions
            = link_to edit_host_profile_path(@host.to_param), class: 'hosts-button' do
              %p プロフィールを編集する

            = link_to new_host_event_path(@host.to_param), class: 'hosts-button' do
              %p 新規イベントを作成する

          -# 管理者からのコメント
          .admin-comments-section
            - if @admin_comments.present?
              %h3 運営からのコメント
              %ul
                - @admin_comments.each do |comment|
                  %li
                    %p.comment-date= l comment.created_at, format: :long
                    %p= comment.body
            - else
              %p 運営からのコメントはまだありません。

          -# 登録済みイベント一覧（管理用）
          .host-events-management
            - if @host_events_for_management.present?
              %h3 登録済みイベント一覧
              %table
                %thead
                  %tr
                    %th イベント名
                    %th いいね数
                    %th 開催日
                    %th 操作
                %tbody
                  - @host_events_for_management.each do |event|
                    %tr
                      %td= link_to event.title, host_event_path(@host.slug.presence || @host.id, event) # スラッグベースのイベント詳細へリンク
                      %td= event.likes_count || 0
                      %td= event.start_time.strftime('%Y/%m/%d') if event.start_time
                      %td
                        = link_to '編集', edit_host_event_path(@host.to_param, event), class: 'button'
                        = button_to '削除', destroy_host_event_path(@host.to_param, event), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'button-delete'
            - else
              %p イベントがありません。

          .host-events-management
            %h3 アカウント情報
            %table
              %thead
                %tr
                  %th 項目
                  %th 詳細
              %tbody
                %tr
                  %td アカウント作成日
                  %td= @host.created_at.strftime('%Y/%m/%d') if @host.created_at
                %tr
                  %td 無料アカウント期間
                  %td
                    - if @host.created_at
                      - remaining_days = 21 - (Date.today - @host.created_at.to_date).to_i
                      - if remaining_days > 0
                        %span.text-muted 残り#{remaining_days}日
                      - else
                        %span.text-muted 無料アカウント期間は終了しました。決済登録をお願いします。
                %tr
                  %td 決済登録
                  %td
                    %form{ action: "https://example.com/host-payment", method: "get", target: "_blank" }
                      = link_to "決済登録", "https://www.kaihipay.jp/forms?form_code=9300764061642479", class: "payment-button", target: "_blank"
          
      -# ★★★ ホスト本人用の情報ここまで ★★★

    .host-identity 
      %h1.host-name-with-breaks= @host.name.presence || '名称未設定'

    .share-section 
      .share-buttons
        = link_to "https://line.me/R/msg/text/?#{CGI.escape("#{@host.name}のページをチェック！ #{request.original_url}")}", target: '_blank', class: 'share-button line-share' do
          %i.fab.fa-line
          %span.label LINE
        = link_to "https://www.facebook.com/sharer/sharer.php?u=#{CGI.escape(request.original_url)}", target: '_blank', class: 'share-button facebook-share' do
          %i.fab.fa-facebook-f
          %span.label Facebook
        = link_to "https://twitter.com/intent/tweet?url=#{CGI.escape(request.original_url)}&text=#{CGI.escape("#{@host.name}のページをチェック！")}", target: '_blank', class: 'share-button twitter-share' do
          %i.fab.fa-twitter
          %span.label エックス
    
    .host-top-image
      - if @host&.top_image&.attached?
        .top-image-container
          = image_tag @host.top_image, class: 'host-top-image-custom'

 
    .host-events
      %h2 出店イベント一覧
      - if @public_events.present?
        .event-slider(tabindex="0" aria-label="イベントスライダー" role="region" style="display:flex;overflow-x:auto;gap:12px;padding:16px 0;scroll-snap-type:x mandatory;")
          - @public_events.first(15).each do |event|
            .event-card
              - if event.images.attached? && event.images.any?
                = link_to host_event_path(event.host&.slug.presence || event.host&.id, event) do
                  = image_tag event.images.first.variant(resize_to_limit: [320, 200]), class: 'event-card-thumb'
              - else
                = link_to host_event_path(event.host&.slug.presence || event.host&.id, event) do
                  = image_tag 'no_image_square.jpg', class: 'event-card-thumb no-image'
              .event-card-body
                %h3.event-card-title= link_to event.title, host_event_path(event.host&.slug.presence || event.host&.id, event)
                %p.event-card-date= event.start_time.present? ? event.start_time.strftime('%Y/%m/%d') : '未定'
                %p.event-card-venue= event.venue.present? ? event.venue : '未設定'
      - else
        %p イベントがありません。

    .content-grid
      .left-column
        .host-news-section
          %h2 新着ニュース
          %p= simple_format(@news_text.presence || '新しいニュースはありません。') # ★変数名確認
      .right-column
        .topics-section
          %h2 トピックス
          %p= simple_format(@topics_text.presence || 'トピックスはありません。') # ★変数名確認

    .description-section
      %h2 私たちについて
      %p= simple_format(@description_text.presence || '記載がありません。') # ★変数名確認

    .host-contact-info
      %table.contact-table
        %tbody
          %tr
            %th ウェブサイト
            %td
              - if @host.website.present?
                = link_to @host.website, @host.website, target: '_blank', rel: 'noopener noreferrer'
              - else
                未設定
          %tr
            %th 所在地
            %td= @host.address.presence || '未設定'
          %tr
            %th TEL
            %td= @host.phone_number.presence || '未設定'
          %tr
            %th 営業時間
            %td
              - if @host.business_hours_start && @host.business_hours_end
                = "#{@host.business_hours_start.strftime('%H:%M')} - #{@host.business_hours_end.strftime('%H:%M')}"
              - else
                未設定
          %tr
            %th 店休日
            %td= @host.business_hours_days.presence || '未設定'


    .goods-section
      %h2 goods紹介
      .goods-list
        .good-item
          %h3 goods①
          - if @host.goods_image_1.attached?
            = image_tag @host.goods_image_1.variant(resize_to_limit: [800, 600]), class: 'good-image'
          %p= simple_format(@goods_introduction_1_text.presence || '商品紹介はありません。') # ★変数名確認

        .good-item
          %h3 goods②
          - if @host.goods_image_2.attached?
            = image_tag @host.goods_image_2.variant(resize_to_limit: [800, 600]), class: 'good-image'
          %p= simple_format(@goods_introduction_2_text.presence || '商品紹介はありません。') # ★変数名確認

        .good-item
          %h3 goods③
          - if @host.goods_image_3.attached?
            = image_tag @host.goods_image_3.variant(resize_to_limit: [800, 600]), class: 'good-image'
          %p= simple_format(@goods_introduction_3_text.presence || '商品紹介はありません。') # ★変数名確認

        .good-item
          %h3 goods④
          - if @host.goods_image_4.attached?
            = image_tag @host.goods_image_4.variant(resize_to_limit: [800, 600]), class: 'good-image'
          %p= simple_format(@goods_introduction_4_text.presence || '商品紹介はありません。') # ★変数名確認

    .host-images
      %h2 画像ギャラリー
      - if @host.images.attached?
        .image-gallery
          - @host.images.each_with_index do |image, index|
            = image_tag image.variant(resize_to_limit: [800, 600]), class: 'host-image', style: "order: #{index};"
      - else
        %p 画像がありません。

    .contact-section
      %h2 コンタクト / 問い合わせ
      %p.contact-message お問い合わせはこちらから:
      - if @host.contact_link.present?
        .contact-link
          - if @host.contact_link.include?('@') # メールアドレスの場合
            = link_to "メールを送る", "mailto:#{@host.contact_link}", class: 'contact-link-text'
          - else # URLの場合
            = link_to "ショップ問い合わせフォームへ", @host.contact_link, target: '_blank', rel: 'noopener noreferrer', class: 'contact-link-text'
      - else
        %p.contact-link お問い合わせリンクが設定されていません。

= render 'footer/footer' # ★ここも .host-lp-page の外側にする