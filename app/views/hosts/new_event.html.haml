= render 'header/header' # ヘッダーのパーシャルを呼び出す

%h1 新しいイベントを作成。

- if @event.errors.any?
  %ul.error-messages
    - @event.errors.full_messages.each do |message|
      %li= message

= form_with model: [@host, @event], local: true, class: 'event-form' do |f|
  .field
    = f.label :title, 'タイトル'
    = f.text_field :title
  .field
    = f.label :description, '説明'
    = f.text_area :description
  .field
    = f.label :images, '画像'
    = f.file_field :images, multiple: true
  .datetime-fields
    .field
      = f.label :start_time, '開始日時'
      = f.datetime_select :start_time, { include_blank: true }, class: 'datetime-select'
    .field
      = f.label :end_time, '終了日時'
      = f.datetime_select :end_time, { include_blank: true }, class: 'datetime-select'
  .prefectures-field
    .field
      = f.label :venue, '開催都道府県'
      = f.select :venue, @prefectures, include_blank: '選択してください'
  .field
    = f.label :address, '開催場所の住所'
    = f.text_field :address
  .field
    = f.label :capacity, '定員の目安'
    = f.number_field :capacity
  .field
    = f.label :is_online, 'オンライン開催'
    = f.check_box :is_online
  .field
    = f.label :online_url, 'オンラインURL'
    = f.text_field :online_url
  .field
    = f.label :is_free, '有料イベント'
    = f.check_box :is_free
  .field
    = f.label :price, '参加費'
    = f.text_field :price
  .field
    = f.label :organizer, '主催者'
    = f.text_field :organizer
  .field
    = f.label :contact_info, '連絡先'
    = f.text_field :contact_info
  .field
    = f.label :website, 'ウェブサイト'
    = f.text_field :website
  .field
    = f.label :video, '動画URL'
    = f.text_field :video
  .actions
    = f.submit '作成', class: 'btn btn-primary'

= link_to '戻る', hosts_path, class: 'btn btn-secondary'
